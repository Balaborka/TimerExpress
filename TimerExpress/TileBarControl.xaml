<UserControl x:Class="TimerExpress.TileBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimerExpress"
             mc:Ignorable="d" 
             d:DesignHeight="230" d:DesignWidth="210">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Background" Value="Transparent" />
        </Style>
    </UserControl.Resources>

    <UniformGrid Rows="1" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,10,0">
        <Button x:Name="Hide" Click="Hide_Click" Content="-" />
        <Button x:Name="Close" Click="Close_Click" Content="x" />
    </UniformGrid>
</UserControl>
